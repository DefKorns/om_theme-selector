    // Git Bash
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "git.autofetch": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "git.enableSmartCommit": true,
    "files.eol": "\n",
    "files.associations": {
        "b[0-9]*": "shellscript",
        "p[0-9]*": "shellscript",
        "om_*": "shellscript",
        "install": "shellscript",
        "uninstall": "shellscript",
        "chmenu": "shellscript",
        "fontfix": "shellscript",
        "c[0-9]*": "properties",
