mkdir -p "$rootfs/usr/share/music_menu"
if [ -d "$rootfs/usr/share/menu_music" ]; then
	[ -d "$rootfs/usr/share/menu_music" ] && mv "$rootfs/usr/share/menu_music"/* "$rootfs/usr/share/music_menu"
fi

ls -1 /var/lib/hakchi/hmod/* | grep -e "andomiz" -e "advanced_music_hack" | sed -r 's/\/var\/lib\/hakchi\/hmod\/uninstall-//g' | while read -r uninstall; do
	hakchi pack_uninstall "$uninstall"
done
transfer_default
copy "$mountpoint/etc/options_menu/themes/scripts/om_fontfix" "$mountpoint/etc/preinit.d/b8025_fontfix"
copy "$mountpoint/etc/options_menu/themes/scripts/om_chmenu" "$rootfs/bin/chmenu"
chmod +x "$rootfs/bin/chmenu"

cfg_OM_ThemeSelector_enabled='y'
return 1
